<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.45),rgba(0,0,0,0.45)), url('<%= asset_url('denise-jans-OaVJQZ-nFD0-unsplash.jpg') %>');">
  <div class="container">
    <h1>Watch List</h1>
    <h2>List your favourite movies</h2>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <% @lists.each do |list| %>
      <div class="my_card col-3 m-4 px-4 rounded" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= asset_url(list.photo_path) %>')">
        <h3><%= list.name %></h3>
        <%= link_to "View list", list, class: "btn btn-outline-light rounded-pill m-4" %>
      </div>
    <% end %>
  </div>
</div>
