<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.45),rgba(0,0,0,0.45)), url('<%= cl_image_path @list.photos.first.key %>');">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container text-center">
  <%= link_to "Add Movies", new_list_bookmark_path(@list), class: "btn btn-outline-dark rounded-pill m-4" %>
</div>


<div class="container justify-content-center">
  <% @list.movies.each do |movie| %>
    <div class="movie_card m-4 rounded">
      <img src="<%= movie.poster_url %>" />
      <div class="movie_card-infos">
        <h2><%= movie.title %></h2>
        <p><%= movie.overview %></p>
      </div>
    </div>
  <% end %>
</div>
